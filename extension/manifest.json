{
  "manifest_version": 3,
  "name": "Major Predictor",
  "version": "1.0.0",
  "description": "Predict CS2 match outcomes on majors.im using AI analysis of HLTV data and team evaluations",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://majors.im/*",
    "https://www.hltv.org/*",
    "https://openrouter.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://majors.im/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
